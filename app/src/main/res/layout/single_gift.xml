<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/back"
        android:backgroundTint="@color/common_google_signin_btn_text_dark_disabled"
        android:elevation="24dp"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/offerpic"
            android:layout_width="100dp"
            android:layout_height="80dp"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/offerName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="SAMSUNG GALAXY  earphone"
            android:textAlignment="viewStart"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textStyle="bold|italic" />

        <ImageButton
            android:id="@+id/lockpic"
            style="@android:style/Widget.ImageButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:background="@drawable/common_google_signin_btn_icon_dark_focused"
            android:elevation="21dp"
            android:scaleType="fitXY"
            android:tint="@color/colorPrimary"
            app:srcCompat="@android:drawable/ic_secure" />

    </LinearLayout>
</LinearLayout>